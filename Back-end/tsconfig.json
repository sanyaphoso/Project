{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "es2019",
    "outDir": "./build",
    "paths": {
      "~/*": ["src/*"]
    },
    "sourceMap": true
  }
}
